datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  //directUrl = env("DATABASE_URL_UNPOOLED")
}

generator client {
  provider = "prisma-client-js"
}

enum UserRole {
  USER
  ADMIN
}

enum Gender {
  MASCULINO
  FEMENINO
  OTRO
}

